<main class="bg-white shadow-sm">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>
      <%= render 'users/userinfo', user: current_user %>
      <div class='col-md-9 mb-3'>
        </br>
        <strong>
          <h4></h4>
          <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
          <div class="page-header">
            <h5>
              <i class="fas fa-question-circle"></i>
              <strong>問い合わせ</strong>
            </h5>
          </div>
          <% if @inquiry.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>入力内容にエラーがあります</strong>
              <ul>
                <% @inquiry.errors.each do |attr, msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <table class="table col-md-11">
            <tr>
              <th>
                名前
                <span class="text-black-50">（必須）</span>
              </th>
              <td><%= f.text_field :name, class:"form-control col-5 shadow-sm" %></td>
            </tr>
            <tr>
              <th>
                メールアドレス
                <span class="text-black-50">（必須）</span>
              </th>
              <td><%= f.text_field :email, class:"form-control col-8 shadow-sm" %></td>
            </tr>
            <tr>
              <th>お問い合わせ内容</th>
              <td><%= f.text_area :message, class:"form-control col-11 shadow-sm" %></td>
            </tr>
          </table>
          <div class="col-4 offset-9">
            <%= f.submit '確認', class:"btn btn-outline-info" %>
            <% end %>
          </div>
        </strong>
      </div>
    </div>
  </div>
</main>

