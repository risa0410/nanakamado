<main class="bg-white shadow-sm">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>

        <div class='col-md-3 text-center'>
          <h2>User info</h2>
          <table class="row justify-content-center">
            <tr>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image.variant(resize:'100x80') %>
              <% else %>
                <%= image_tag('no_image.jpg', size:'100x80') %>
              <% end %>
            </tr>
            <tr>
        	    <th>name</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.name %></th>
            </tr>
            <tr>
        	    <th>introduction</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.introduction %></th>
        	  </tr>
        	  <tr>
        	    <th>
        	      <% if current_user.following?(@user) %>
                  <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
                <% end %>
        	    </th>
        	  </tr>
          </table>
        </div>

        <div class='col-md-9'>
        <h2>My Page</h2>
          <table>
            <tr>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image.variant(resize:'300x260') %>
              <% else %>
                <%= image_tag('no_image.jpg', size:'300x260') %>
              <% end %>
            </tr>
            <tr>
        	    <th>name</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.name %></th>
            </tr>
            <tr>
        	    <th>introduction</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.introduction %></th>
        	  </tr>
          </table>
        </div>

    </div>
  </div>
</main>