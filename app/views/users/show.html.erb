<div class='container'>
  <div class='row'>

    <main1 class="bg-white col-3 shadow-sm" style="text-align:center;">
      <h2>User info</h2>
      <table class="mx-auto">
        <tr>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize:'100x80') %>
          <% else %>
            <%= image_tag('no_image.jpg', size:'100x80') %>
          <% end %>
        </tr>
        <tr>
          <th></th>
        </tr>
        <tr>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
        <tr>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <%= link_to"edit", edit_user_path(current_user) %>
    </main1>

    <main2 class="bg-white col-9 shadow-sm">
      <h2>Mypage</h2>
        <div class="row">
          <div class="card col-4 mx-3 mb-4 embed-responsive shadow-sm">
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image.variant(resize:'250x220') %>
            <% else %>
              <%= image_tag('no_image.jpg', size:'250x220') %>
            <% end %>
          </div>
          <div class="card col-7 mb-4 shadow-sm">
            <div class="col-12">
              </br><p>name：　<%= @user.name %></p>
              <p>introduction：</p>
              <p><%= @user.introduction %></p>
            </div>
          </div>
        </div>

    </main2>

  </div>
</div>