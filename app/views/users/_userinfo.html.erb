<div class='col-md-3 text-center'>
  <h2>User info</h2>
  <table class="mx-auto">
    <tr>
      <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image.variant(resize:'100x80') %>
      <% else %>
        <%= image_tag('no_image.jpg', size:'100x80') %>
      <% end %>
    </tr>
    <tr>
      <th></th>
    </tr>
    <tr>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
    </tr>
    <tr>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
    	<th>
    	  <% if current_user.following?(user) %>
          <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
        <% end %>
    	</th>
    </tr>
    <tr>
      <th><%= link_to "お気に入り一覧", user_users_favorite_path(user.id) %></th>
    </tr>
  </table>
</div>