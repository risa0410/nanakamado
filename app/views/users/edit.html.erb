<main style="background-color: #F7F7F7;">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>

        <div class='col-md-3' style="text-align:center;">
        </div>

        <div class='col-md-8 offset-md-1'>
        <h2>My Page</h2>
          <table>
            <tr>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image.variant(resize:'400x360') %>
              <% else %>
                <%= image_tag('no_image.jpg' , size: '400x360') %>
              <% end %>
            </tr>
            <tr>
        	    <th>name</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.name %></th>
            </tr>
            <tr>
        	    <th>introduction</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.introduction %></th>
        	  </tr>
        	  <%= form_with model:@user, local:true do |f| %>
              <div class="form-group">
               <label for="user_name">Name</label></br>
               <%= f.text_field :name, autofocus: true, class:"form-control name" %>
              </div>
              <div class="form-group">
               <label for="user_image">Image</label></br>
               <%= f.attachment_field :profile_image %>
              </div>
              <div class="form-group">
               <label for="user_introduction">Introduction</label></br>
               <%= f.text_area :introduction, autofocus: true, class:"form-control introduction" %>
              </div>
              <div class="form-group">
               <%= f.submit "Update User", class:"btn btn-secondary" %>
              </div>
            <% end %>
          </table>
        </div>

    </div>
  </div>
</main>
<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= f.submit "変更を保存" %>
<% end %>