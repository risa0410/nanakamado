<main class="bg-white shadow-sm">
  <p id="notice"></p>
<div class='container'>
  <div class='row'>

    <%= render 'users/userinfo', user: @user %>

    <div class='col-md-9'>
      <h4>プロフィール編集</h4>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label></br>
            <%= f.text_field :name, autofocus: true, class:"form-control col-5 name" %>
          </div>

          <div class="form-group">
            <label for="user_image">Image</label></br>
            <%= f.file_field :profile_image %>
          </div>

          <div class="form-group">
            <label for="user_introduction">Introduction</label></br>
            <%= f.text_area :introduction, autofocus: true, class:"form-control col-8 introduction" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update User", class:"btn btn-secondary" %>
          </div>
        <% end %></br>
      <h4>現在のプロフィール</h4>
      <div class="row">
        <div class="card col-4 mx-3 mb-4 embed-responsive shadow-sm">
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize:'250x250') %>
          <% else %>
            <%= image_tag('no_image.jpg', size:'250x250') %>
          <% end %>
        </div>
        <div class="card col-7 mb-4 shadow-sm">
          <div class="col-12">
            </br><p>name：　<%= @user.name %></p>
            <p>introduction：</p>
            <p><%= @user.introduction %></p>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</main>