<main style="background-color: #F7F7F7;">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>


        <div class='col-md-3' style="text-align:center;">
          <h2>User info</h2>
          <table>
            <tr>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.image.variant(resize:'200x200') %>
              <% else %>
                <%= image_tag('no_image.jpg' , size: '200x180') %>
              <% end %>
            </tr>
            <tr>
        	    <th>name</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.name %></th>
            </tr>
            <tr>
        	    <th>introduction</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.introduction %></th>
        	  </tr>
          </table>
        </div>

        <div class='col-md-8 offset-md-1'>
        <h2>Post detail</h2>
          <%= form_with model: @post, local:true do |f| %>
            <div class="form-group">
              <label for="book_title">Image</label></br>
              <%= f.file_field :image %>
            </div>
            <div class="form-group">
              <label for="book_title">Title</label></br>
              <%= f.text_field :title, class:"form-control book_title" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label></br>
              <%= f.text_area :body, class:"form-control book_body" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Post', class:"btn btn-success" %>
            </div>
          <% end %>
        </div>
        
        <div class="card-list-containar py-5 px-5">
          
          <div class="card w-50 mx-auto mt-4">
              <%= image_tag post_image, :image, class:"card-img-top"; %>
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                  <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                </div>
                <div class="col-10">
                  <p class="card-title">
                    <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
                      <strong><i class="far fa-flag"></i><span> <%= post_image.shop_name %></span></strong>
                    <% end %>
                  </p>
                  <p class="card-text">説明：<%= post_image.caption %></p>
                  <span><i class="fas fa-user"></i> By <%= post_image.user.name %> ｜ </span>
                  <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

    </div>
  </div>
</main>