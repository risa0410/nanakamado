<main class="bg-white shadow-sm">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>

        <%= render 'users/userinfo', user: @user %>

        <div class="card-deck-container col-md-9">
          <div class="search-form offset-3">
             <%= form_with url: search_path, method: :get, local: true do |f| %>
               <%= f.text_field :keyword, class:"col-5", value: @keyword %>
               <%= f.submit "検索" %>
             <% end %>
          </div>

          <h2>Index</h2>
          <div class="row">
            <% @post.each do |post| %>
              <div class="card col-5 mx-3 mb-4 embed-responsive shadow-sm">
                <% if post.post_image.attached? %>
                  <%= link_to post_path(post.id) do %>
                    <%= image_tag post.post_image, class:"card-img-top"; %>
                  <% end %>
                <% else %>
                  <%= image_tag('no_image.jpg') %>
                <% end %>
                <div class="card-body">
                  <div class="row">
                    <div class="col-2">
                      <% if post.user.profile_image.attached? %>
                        <%= image_tag post.user.profile_image.variant(resize:'50x40'), class:"mt-3 rounded-circle"; %>
                      <% else %>
                        <%= image_tag('no_image.jpg', size:'50x40') %>
                      <% end %>
                    </div>
                    <div class="col-9 offset-1">
                      <p class="card-title">
                          <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
                          <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
                      </p>
                      <span><i class="fas fa-user"></i>  <%= post.user.name %> ｜ </span>
                      <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <%#= paginate post_images %>
          </div>
        </div>

  </div>
</main>