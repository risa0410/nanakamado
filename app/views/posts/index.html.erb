<main style="background-color: #F7F7F7;">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>


        <div class='col-md-3' style="text-align:center;">
          <h2>User info</h2>
          <table>
            <tr>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.image.variant(resize:'200x200') %>
              <% else %>
                <%= image_tag('no_image.jpg' , size: '200x180') %>
              <% end %>
            </tr>
            <tr>
        	    <th>name</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.name %></th>
            </tr>
            <tr>
        	    <th>introduction</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.introduction %></th>
        	  </tr>
          </table>
        </div>


        <div class="card-list-containar py-5 px-5">
          <% @post.each do |post| %>
          <div class="card w-50 mx-auto mt-4">
            <% if post.post_image.attached? %>
              <%= image_tag post.post_image, class:"card-img-top"; %>
            <% else %>
              <%= image_tag('no_image.jpg' , size:'60x60') %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                  <% if post.user.profile_image.attached? %>
                    <%= image_tag @user.profile_image.variant(resize:'60x60'), class:"mt-3 rounded-circle"; %>
                  <% else %>
                    <%= image_tag('no_image.jpg' , size:'60x60') %>
                  <% end %>
                </div>
                <div class="col-10">
                  <p class="card-title">
                      <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
                  </p>
                  <p class="card-text">説明：<%= post.body %></p>
                  <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
                  <!--<span><%#= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>-->
                </div>
              </div>
            </div>
          </div>
          <% end %>
          <%#= paginate post_images %>
        </div>

    </div>
  </div>
</main>