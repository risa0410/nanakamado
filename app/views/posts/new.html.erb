<main class="bg-white shadow-sm">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>

        <%= render 'users/userinfo', user: @user %>

        <div class='col-md-9'>
          </br>
          <strong>
            <h4></h4>
            <%= form_with model: @post, local:true do |f| %>
              <div class="form-group">
                <label for="book_title">画像</label></br>
                <%= f.file_field :post_image %>
              </div></br>
              <div class="form-group">
                <label for="book_title">タイトル</label></br>
                <%= f.text_field :title, class:"form-control book_title col-5 shadow-sm" %>
              </div></br>
              <div class="form-group">
                <label for="book_opinion">内容</label></br>
                <%= f.text_area :body, class:"form-control book_body col-9 shadow-sm" %>
              </div>
              <div class="form-group">
                <%= f.submit '投稿する', class:"btn btn-outline-info" %>
              </div>
            <% end %>
          </strong>
        </div>

    </div>
  </div>
</main>