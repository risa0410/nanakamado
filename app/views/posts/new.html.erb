<main class="bg-white shadow-sm">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>

        <div class='col-md-3' style="text-align:center;">
          <h2>User info</h2>
          <table>
            <tr>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image.variant(resize:'100x80') %>
              <% else %>
                <%= image_tag('no_image.jpg', size:'100x80') %>
              <% end %>
            </tr>
            <tr>
        	    <th>name</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.name %></th>
            </tr>
            <tr>
        	    <th>introduction</th>
        	  </tr>
        	  <tr>
        	    <th><%= @user.introduction %></th>
        	  </tr>
          </table>
        </div>

        <div class='col-md-9'>
        <h2>New Post</h2>
          <%= form_with model: @post, local:true do |f| %>
            <div class="form-group">
              <label for="book_title">Image</label></br>
              <%= f.file_field :post_image %>
            </div>
            <div class="form-group">
              <label for="book_title">Title</label></br>
              <%= f.text_field :title, class:"form-control book_title" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Body</label></br>
              <%= f.text_area :body, class:"form-control book_body" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Post', class:"btn btn-success" %>
            </div>
          <% end %>
        </div>

    </div>
  </div>
</main>