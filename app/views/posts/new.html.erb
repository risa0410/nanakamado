<main class="bg-white shadow-sm">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>

        <%= render 'users/userinfo', user: @user %>

        <div class='col-md-9'>
        <h2>New Post</h2>
          <%= form_with model: @post, local:true do |f| %>
            <div class="form-group">
              <label for="book_title">Image</label></br>
              <%= f.file_field :post_image %>
            </div>
            <div class="form-group">
              <label for="book_title">Title</label></br>
              <%= f.text_field :title, class:"form-control book_title shadow-sm" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Body</label></br>
              <%= f.text_area :body, class:"form-control book_body shadow-sm" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Post', class:"btn btn-success" %>
            </div>
          <% end %>
        </div>

    </div>
  </div>
</main>