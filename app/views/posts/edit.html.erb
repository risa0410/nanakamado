<div id = "error_explanation" style="background-color: #FFB6C1; ">
  <% if @post.errors.any? %>
    <div class="ml-4 mt-3">
      <%= @post.errors.count %> errors prohibited this obj from being saved:
    </div>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<main class="bg-white shadow-sm">
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>

      <%= render 'users/userinfo', user: @user %>

      <div class='col-md-8'>
        </br>
        <h5>
          <i class="fas fa-pencil-alt"></i>
          <strong>投稿の編集</strong>
        </h5>
        <strong>
          <div class="card embed-responsive shadow-sm">
            <% if @post.post_image.attached? %>
              <%= link_to post_path(@post.id) do %>
                <%= image_tag @post.post_image.variant(resize:'250x250'), class:"card-img-top"; %>
              <% end %>
            <% else %>
              <%= image_tag('no_image.jpg', size:'250x250') %>
            <% end %>
          </div>
          <%= form_with model:@post, local:true do |f| %>
            <div class="form-group"></br>
              <label for="post_title">タイトル
                <span class="text-black-50">（10文字以内）</span>
              </label></br>
              <%= f.text_field :title, autofocus: true, class:"form-control col-5 shadow-sm" %>
            </div>
            <div class="form-group">
              <label for="post_body">内容
                <span class="text-black-50">（1000文字以内）</span>
              </label></br>
              <%= f.text_area :body, autofocus: true, class:"form-control col-8 shadow-sm" %>
            </div>
            <div class="form-group">
              <%= f.submit "保存する", class:"btn btn-outline-info" %>
            </div>
          <% end %>
        </strong>
      </div>

    </div>
  </div>
</main>