<div id = "error_explanation" style="background-color: #FFB6C1; ">
  <% if alert %>
    <div class="ml-4 my-3">
      <%= alert %>
    </div>
  <% end %>
</div>
<main class="bg-white shadow-sm text-center">
  <div class='container'>
      </br></br>
      <%= image_tag('logoname.png', size:'220x40') %>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field mt-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-4 form-control mx-auto", placeholder:"メールアドレス" %>
        </div></br>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", class:"col-4 form-control mx-auto", placeholder:"パスワード" %>
        </div></br>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-outline-info" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %></br>
  </div>
</main>
