<%= form_with(model:[post, post_comment]) do |f| %>
  <div class="row">
    <div class="col-8 mx-1 mt-3">
      <div class="form-group">
        <%= f.text_area :comment, placeholder: "新しいコメント", class: 'form-control shadow-sm' %>
      </div>
    </div>
    <div class="col-2 mt-5">
      <div class="form-group">
        <%= f.submit "送信する" %>
      </div>
    </div>
  </div>
<% end %>