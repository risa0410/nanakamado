<%= form_with(model:[post, post_comment]) do |f| %>
  <div class="row mb-3">
    <div class="col-9 mx-1">
      <div class="form-group">
        <%= f.text_area :comment, placeholder: "新しいコメント", class: 'form-control shadow-sm' %>
      </div>
    </div>
    <div class="col-2 mt-4">
      <div class="form-group">
        <%= f.submit "送信する", class:"btn btn-outline-info btn-sm" %>
      </div>
    </div>
  </div>
<% end %>