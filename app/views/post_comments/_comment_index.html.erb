<% post.post_comments.each do |post_comment| %>
    <div class="card col-11 mx-1 mt-3 embed-responsive shadow-sm">
      <div class="card-body">
        <div class="row">
          <div class="col-2" style="text-align:center;">
            <% if post_comment.user.profile_image.attached? %>
              <%= image_tag post_comment.user.profile_image.variant(resize:'50x40') %>
            <% else %>
              <%= image_tag('no_image.jpg', size:'50x40') %>
            <% end %>
            <%= post_comment.user.name %>
          </div>
          <div class="col-10">
            <%= post_comment.created_at.strftime('%Y/%m/%d') %></br>
            <%= post_comment.comment %>
            <div>
              <% if post_comment.user == current_user %>
                <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>